pipeline {
    agent any

    tools {
        maven 'Maven3' // Ensure 'Maven3' matches the name defined in Jenkins Global Tool Configuration
    }

    stages {
        stage('Build package') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Maven Install') {
            steps {
                sh 'mvn install'
            }
        }
        stage('Deploy to Nexus') {
            steps {
                sh 'mvn deploy'
            }
        }
        stage('Build Docker Image (Spring Part)') {
            steps {
                script {
                    sh 'sudo chmod 666 /var/run/docker.sock'
                    def dockerImage = docker.build("azizbenismail/kaddem:9")
                }
            }
        }
        stage('Docker compose (FrontEnd BackEnd MySql)') {
            steps {
                script {
                    sh 'sudo systemctl stop mysql'
                    sh 'docker-compose up -d'
                }
            }
        }
    }
}
